<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmariani.basics">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ScrollingActivity"
            android:label="@string/activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.ScrollingFloatingButtonActivity"
            android:label="@string/activity_scrolling_with_floating_button"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.ScrollingImageActivity"
            android:label="@string/activity_scrolling_with_image"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.QuickReturnActivity"
            android:label="@string/activity_quick_return"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.TabActivity"
            android:label="@string/activity_tab"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.TabImageActivity"
            android:label="@string/activity_tab_image"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
        <activity
            android:name=".ui.activity.BottomNavigationActivity"
            android:label="@string/activity_bottom_navigation"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.activity.MainActivity">
        </activity>
    </application>

</manifest>